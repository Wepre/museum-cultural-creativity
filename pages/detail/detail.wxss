  width: 80%;
  margin-bottom: 70px;
  margin-left:20px;
  /* border:solid #07c160; */

}
.book-img{
  margin: auto;
  
}
.bottom{
  border-top: rgba(150, 148, 148, 0.247) solid 1px;
 background-color: white;
  position: fixed;
  width: 100%;
  height: 50px;/*这里需要改*/
  bottom: 0px;
}
.btn{
  width: 100px;
  background-color: #3a8aed;
  border-radius: 20px;
  display: inline-block;
  color: rgb(255, 255, 255);
  font-weight: bold;
  font-size: smaller;
}
.small_btn{
  width: 50px;
  color: black;
  background-color: white;
  font-size: 8px;
  height: 25px;
}
.tubiao{

  width:50px;
  height: 25px;
  
  
}
.tubiao image{

  
width: 100%; 
  height: 25px;
}
#shelf{
  position: fixed;
  right: 10px;
  bottom: 10px;
}
#content{
  position: fixed;
  right: 110px;
  bottom: 10px;
}
.bigbox{
  position: fixed;
  text-align: center;
  width: 25px;
  font-size: 7px;
  
  left: 10px;
  bottom: 5px;
}
.bigbox image{
  width: 100%;
}
.shareicon{
  height: 25px;
  

}
.lb_share{
  
  line-height: 8px;
}


.btn_gray{
  width: 100px;
  background-color: #3a8aed;
  border-radius: 20px;
  display: inline-block;
  color: rgb(255, 255, 255);
  font-weight: bold;
  font-size: smaller;
  color: white;
  border: gray solid 1px;
}
.like{
  position: fixed;
  left: 40px;
  bottom: 5px;
}
.info{
  position: fixed;
  left: 72px;
  bottom: 5px;
}
.mask{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
  border: #000 3px solid;
 }
 
 .modalDlg{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  z-index: 9999;
 }

 .modal-close {
   font-size: 20px;
   position: fixed;
   top: -30rpx;
   right: -15rpx;
   color: #ffffff;
 }
 .smallwin{
  
   width: 80%;
   height: 50%;
   background-color: white;
   border-radius: 2px;
 }
