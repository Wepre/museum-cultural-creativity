  margin: 20rpx;
  border-radius: 50%;
}

/*重点在于阴影的设计*/
.card-centent {
    border: 0.5px solid #FCC4CC;
    border-radius: 28px;
    background-color: #FEFBEC;
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 20px;
    position: relative;
}

/*隐藏导航条*/
.card-centent ::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.card-centent .more {
    right: 15px;
    color: #000000;
    position: absolute;
    font-size: 12px;
    top:2px;
}

.card-centent .card-img{
  width: 50rpx;
  height: 30rpx;
  padding-left: 20px;
  top:0px;
}

.card-centent .bookimg{
  width: 30rpx;
  height: 30rpx;
  padding-left: 20px;
  top:0px;
}

.card-centent .shoucang{
  font-size: 11px;
  position: absolute;
  left:40px;
  top:3px;
}
.card-centent .card-inner .card-text{ 
   height: 24px; 
   display: inline-block;
   font-size: 13px;
}

.card-centent .card-inner{
    margin-left: 8px;
    margin-right: 8px;
    margin-top: 0px;
    margin-bottom: 10px;
    position: relative;
}
